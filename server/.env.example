# 本地开发环境变量（示例）
# 复制此文件为 .env 并填写实际值

# 数据库连接 (Vercel Postgres)
DATABASE_URL="postgres://username:password@host:5432/database?pgbouncer=true&connect_timeout=15"
DIRECT_URL="postgres://username:password@host:5432/database"

# JWT 配置
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# 服务器端口
PORT=3000

# 前端地址（用于 CORS）
FRONTEND_URL="http://localhost:5173"
